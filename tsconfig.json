{
    "compilerOptions": {
        "noEmit": true,
        "strict": true,
        "target": "es5",
        "outDir": "./dist",
        "declaration": true,
        "module": "commonjs",
        "lib": ["ES2015", "DOM"],
        "isolatedModules": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}